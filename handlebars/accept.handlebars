<html>
    <head>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    </head>
    <body>
        <div class="container mt-3 jumbotron">
            <div class="row">
                <h1>{{title}}</h1>
                <img src={{image}} class="img-fluid rounded float-left" alt={{image}} width="100" height="100">
                <p>Nombre: {{name}}</p>
                <p>Apellido: {{lastname}}</p>
                <p>Edad: {{age}}</p>
                <p>Mail: {{email}}</p>
                <p>Telefono: {{phone}}</p>
                <p>Direccion: {{address}}</p>
            </div>
            <h3>Productos</h3>
            {{#each products}}
                <div class="row">
                    <div class="col-md-4">
                        <img src={{image}} class="img-fluid rounded float-left" alt={{image}} width="100" height="100">
                    </div>
                    <div class="col-md-8">
                        <p>Producto: {{name}}</p>
                        <p>Precio: {{price}}</p>
                        <p>Cantidad: {{quantity}}</p>
                        <p>Descripcion: {{description}}</p>
                    </div>
                </div>
            {{/each}}
            <div class="row">
                <div class="col-md-12">
                    <p>Total: {{total}}</p>
                </div>
            </div>
        </div>